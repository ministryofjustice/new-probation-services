{
  "name": "new-probation-services",
  "version": "0.0.1-alpha.8",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "preversion": "npm-run-all -s flow test",
    "version": "npm run build",
    "flow": "flow",
    "flow-check": "flow check",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start-backend": "PORT=3001 node react-backend/bin/www",
    "start": "REACT_APP_HOST_ENV=dev npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/new-probation-services.git"
  },
  "bugs": {
    "url": "https://github.com/ministryofjustice/new-probation-services/issues"
  },
  "private": true,
  "engines": {
    "node": ">=10.0.0 <11.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,css,scss}": [
      "prettier --single-quote --jsx-bracket-same-line --write",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "elasticsearch": "14.2.2",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-highlight-words": "0.11.0",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.1.4"
  },
  "devDependencies": {
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "flow-bin": "0.71.0",
    "husky": "0.14.3",
    "lint-staged": "7.1.0",
    "node-sass-chokidar": "1.2.2",
    "npm-run-all": "4.1.3",
    "prettier": "1.12.1",
    "react-test-renderer": "16.3.2",
    "sinon": "5.0.7"
  }
}
